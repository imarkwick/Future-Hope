<div class="row">
	<div class="small-12 columns">
		<img id="logo" src="images/logo.jpg">
	</div>
</div>
<div class="row">
	<div class="small-12 columns">
		<h1 id="volunteerheader">Table <% if @number %><%= @number %><% end %></h1>
	</div>
</div>

<div class="row">
	<div class="small-12 columns">
		<div id="status">Connecting....</div>
	</div>
</div>
<div class="row">
	<div class="small-12 columns">
		<ul id="messages"></ul>
	</div>
</div>
<div class="row">
	<div class="small-12 columns">
		<button type="button" id="close">Close Connection</button>
	</div>
</div>

<div class="row">
	<div class="small-12 columns">
		<div id="new-item">
			<form action='/display' id='auction-list' method='post'>
				<select name="title" id="item">
					<option class="options-list">Auction Item</option>
				  <option class="options-list" value="rugby.svg">Rugby Program (1 available)</option>
				  <option value="cricket.svg">Cricket Program (1 available)</option>
				  <option value="rowing.svg">Rowing Program (1 available)</option>
				  <option value="football.svg">Football (already sold)</option>
				  <option value="homes.svg">Home with House-Parent</option>
				  <option value="degree.svg">3-yr University Course</option>
				  <option value="">Teacher (1 yr)</option>
				  <option value="childhood1year.svg">Child Off The Streets (1 yr)</option>
				  <option value="activities.svg">Activities</option>
				  <option value="teacher1month.svg">Teacher (1 month)</option>
				  <option value="teacher1year.svg">Teacher (1 month)</option>
				  <option value="child1month.svg">Child Off The Streets (1 month)</option>
				</select>
				<select id="guest-list" name="names[]" size="10" multiple>
					<% if @all_table_names %>
						<% @all_table_names.each do |guest| %>
					    <option value="<%= guest %>"><%= guest %></option>
					  <% end %>
				  <% end %>
			  </select>	
				<input type='submit' id="submit" value='SUBMIT'>
			</form>	
			<button type="submit" action="/volunteer-table" value="reselect" id="reselect">Reselect Table</button>
		</div>
	</div>
</div>

<script src="js/socket.js"></script>
